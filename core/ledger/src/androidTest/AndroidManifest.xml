<?xml version="1.0" encoding="utf-8"?>
<!--
  AndroidManifest.xml for Android instrumented tests

  This manifest enables cleartext traffic to localhost for integration testing.
  SECURITY: This is ONLY for testing and does NOT affect production builds.
-->
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Permissions for testing -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Allow cleartext traffic to localhost for testing with local Midnight node -->
    <application
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true" />

</manifest>
